<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{docTitle}
    link(rel="stylesheet", href="/css/main.css")
    block styles
  body
    header
      nav.desktop-nav
        .shop-nav
          a(href="/", class=(path === '/' ? 'active' : '')) Home
          a(href="/product-list", class=(path === '/product-list' ? 'active' : '')) Product List
          a(href="/cart", class=(path === '/cart' ? 'active' : '')) Cart
        
        .admin-nav
          a(href="/admin/add-product", class=(path === '/admin/add-product' ? 'active' : '')) Add product
          a(href="/admin/stock-list", class=(path === '/admin/stock-list' ? 'active' : '')) Stock
        
        .mobile-nav
          button.menu-btn Menu
    script(src="/js/script.js")
    main
      block content